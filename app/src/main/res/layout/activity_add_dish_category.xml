<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/content_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.001dp"
        android:id="@+id/line"/>
<com.canplay.repast_wear.view.NavigationBar
    android:id="@+id/navigationbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:navigationTitle="添加配菜分类"
    app:navigationRight_txt="新建"
    app:navigationRight_type="txts"/>
    <com.canplay.repast_wear.view.scrollView.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.canplay.repast_wear.view.FlexboxLayout
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/content_bg"
                android:id="@+id/fbl_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:flexDirection="row"
                app:flexWrap="wrap"
                android:minHeight="60dp"
                app:justifyContent="flex_start" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/nocaipin" />

                <TextView
                    android:id="@+id/tv_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="暂无菜品分类"
                    android:textColor="@color/color9"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </com.canplay.repast_wear.view.scrollView.StickyScrollView>


</LinearLayout>
