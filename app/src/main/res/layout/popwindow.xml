<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/call_list"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_bg_hui"
            android:gravity="center_vertical|right"
            android:paddingRight="12dp"
            android:text="收到"
            android:textColor="@color/white"
            android:textSize="20px" />

        <TextView
            android:id="@+id/former"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_marginLeft="9dp"
            android:clipChildren="false"
            android:background="@drawable/pink_cycle"
            android:gravity="center"
            android:text="01"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/menuName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_bg_half"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingTop="10dp"
        android:clipToPadding="false"
        android:text="加水"
        android:textColor="@color/white"
        android:textSize="32px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/to_other"
            android:layout_width="60px"
            android:layout_height="60px"
            android:background="@drawable/org_cycle"
            android:gravity="center"
            android:text="转移"
            android:textColor="#ffffff"
            android:textSize="24px" />

        <TextView
            android:id="@+id/complain"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:background="@drawable/green_cycle"
            android:gravity="center"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="24px" />

        <TextView
            android:id="@+id/clock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="90"
            android:textColor="@color/white"
            android:textSize="20px" />
    </RelativeLayout>
</LinearLayout>
